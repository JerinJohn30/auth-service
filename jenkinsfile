pipeline {	
	agent any tools {	    
		maven 'my-maven’		
		jdk 'my-jdk’	
	}	
	stages {
        stage('Clone'){			
			steps {git url: "https://github.com/JerinJohn30/auth-service", branch:"main"}		
		}
        stage('Build'){			
			steps {sh "mvn clean install -DskipTests"}		
		}		
		stage('Pre-Deploy'){			
			steps{sh "docker rm -f auth-cntr"
					  sh "docker rmi -f auth-img"}		
        }		
		stage('Deploy') {			
			steps { sh "docker build -t auth-img ."			    
			            sh "docker run -p 3090:8090 -d --name auth-cntr --network my-net auth-img"}		
		}
    }		
}
